pipeline {
    agent any

    stages {
        stage('Baixar repositorio') {
            steps {
              git branch: 'main', url: 'https://github.com/kellyrrmartins/tcc-ebac.git'
            }
        }
        stage('ir para diretorio exerecicio-ui') {
            steps {
              sh 'cd ui'
            }
        }
        
        stage('Instalar dependencias') {
            steps {
              sh 'npm install'
            }
        }
        stage('Executar Testes') {
            steps {
              sh 'NO_COLOR=1 npm run cy:run'
            }
        }
    }
}